<div id="tweets" class="row">
  <%= render :partial => "common/page_title", :locals => {:title => "Local Tweets"} %>

  <% @tweets.map do |tweet| %>
    <div class="span12">
      <div class="tweet" data-tweet-id="<%= tweet.id %>">
        <%= image_tag(tweet.user.profile_image_url, :class => 'avatar') %>
        <strong><%= tweet.user.username %> says:</strong>
        <div class="content">
          <%= tweet.text %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="span6 offset3">
    <button class="btn btn-info" onclick="LocalTweets.retrieveEarlier($('.tweet:last').data('tweet-id'))">
      Load more
    </button>
  </div>
</div>
